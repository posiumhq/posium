{
  "name": "@posium/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .turbo",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "infisical run -- vitest run",
    "test:watch": "infisical run -- vitest"
  },
  "dependencies": {
    "@posium/agents": "workspace:*",
    "@posium/appevents": "workspace:*",
    "@posium/auth": "workspace:*",
    "@posium/boss": "workspace:*",
    "@posium/db": "workspace:*",
    "@posium/id": "workspace:*",
    "@posium/types": "workspace:*",
    "drizzle-orm": "^0.41.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@posium/eslint-config": "workspace:*",
    "@posium/testdb": "workspace:*",
    "@posium/typescript-config": "workspace:*",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  }
}
