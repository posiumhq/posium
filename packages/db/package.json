{
  "name": "@posium/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    },
    "./seed": {
      "types": "./dist/seed.d.ts",
      "import": "./dist/seed.js"
    },
    "./tracing": {
      "types": "./dist/tracing.d.ts",
      "import": "./dist/tracing.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .turbo",
    "db:generate": "infisical run -- drizzle-kit generate",
    "db:migrate": "infisical run -- drizzle-kit migrate",
    "db:push": "infisical run -- drizzle-kit push",
    "db:studio": "infisical run -- drizzle-kit studio",
    "db:seed": "infisical run -- tsx src/seed.ts",
    "db:unseed": "infisical run -- tsx src/seed.ts --unseed",
    "db:check-testdb": "tsx scripts/check-testdb.ts",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@posium/id": "workspace:*",
    "@posium/types": "workspace:*",
    "drizzle-orm": "^0.41.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@posium/eslint-config": "workspace:*",
    "@posium/typescript-config": "workspace:*",
    "@types/node": "^20.14.10",
    "better-auth": "^1.3",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.39.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
}
